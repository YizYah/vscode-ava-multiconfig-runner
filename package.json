{
  "name": "vscode-ava-multi-config-runner",
  "displayName": "ava-multi-config-runner",
  "description": "a vsc extension for running or debugging tests with multiple configurations",
  "version": "1.0.0",
  "repository": "https://github.com/YizYah/vscode-ava-multiconfig-runner",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "YizYak",
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "ava-launcher.DEBUG_SINGLE_INT_TEST_AT_CURSOR",
        "key": "ctrl+t ctrl+d",
        "mac": "cmd+t cmd+d",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Launch",
      "properties": {
        "launch.NPM_TOKEN": {
          "type": "string",
          "default": "",
          "markdownDescription": "Token for running npm."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}
